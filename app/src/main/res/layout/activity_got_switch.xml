<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GotSwitchActivity">
    <ImageView
            android:src="@drawable/got_switch_background"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="got_switch" android:id="@+id/imageView"/>

    <Button
            android:id="@+id/okButton"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:clickable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/background_extended_fab"
            android:outlineProvider="background" android:text="OK" android:textColor="#FFFFFF"
            android:layout_marginStart="60dp" android:layout_marginBottom="208dp"/>

</android.support.constraint.ConstraintLayout>